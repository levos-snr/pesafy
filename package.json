{
  "name": "pesafy",
  "version": "0.1.1",
  "private": false,
  "description": "A powerful payment gateway library for African payment systems, starting with M-Pesa Daraja API",
  "author": "lewisodero27@gmail.com",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components/react": {
      "types": "./dist/components/react/index.d.ts",
      "import": "./dist/components/react/index.js",
      "require": "./dist/components/react/index.cjs"
    },
    "./components/react/styles.css": "./dist/components/react/styles.css",
    "./express": {
      "types": "./dist/express/index.d.ts",
      "import": "./dist/express/index.js",
      "require": "./dist/express/index.cjs"
    },
    "./components/vue": "./src/components/vue/index.ts",
    "./components/vue/*": "./src/components/vue/*"
  },
  "files": [
    "dist",
    "src/components/vue"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "format:prettier": "prettier --write .",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun run typecheck",
    "changeset": "changeset",
    "release": "changeset publish --access public",
    "version": "changeset version",
    "prepare": "husky"
  },
  "keywords": [
    "mpesa",
    "daraja",
    "safaricom",
    "payment",
    "gateway",
    "africa",
    "kenya",
    "pesafy",
    "stk-push",
    "b2c",
    "c2b"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/levos-snr/pesafy.git"
  },
  "homepage": "https://github.com/levos-snr/pesafy#readme",
  "bugs": {
    "url": "https://github.com/levos-snr/pesafy/issues"
  },
  "gitmoji": {
    "autoAdd": false,
    "emojiFormat": "emoji",
    "scopePrompt": false,
    "messagePrompt": true,
    "capitalizeTitle": true,
    "gitmojisUrl": "https://gitmoji.dev/api/gitmojis"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@changesets/cli": "2.29.8",
    "@storybook/react": "^10.2.10",
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "@types/react": "^19.2.14",
    "express": "^5.2.1",
    "gitmoji-cli": "^9.7.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "express": ">=4.0.0",
    "react": ">=18.0.0",
    "vue": ">=3.0.0",
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
